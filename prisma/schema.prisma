// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  admin Boolean @default(false)
  createdAt DateTime @default(now())
  updateAt DateTime @default(now())

  @@map("user")
}

model GymStudent {
  id Int @id @default(autoincrement())
  email String @unique
  name String
  phoneNumber String @unique
  dateOfBirth DateTime
  createdAt DateTime @default(now())
  updateAt DateTime @default(now())
  informationPersonal IformationPersonal?
  modality Modalities?

  @@map("gym_student")
}

model IformationPersonal {
  id Int @id @default(autoincrement())
  weight Float
  height Float
  gender String
  anotation String
  comorbidities String[]
  student GymStudent @relation(fields: [studentId], references: [id])
  studentId Int @unique
  createdAt DateTime @default(now())
  updateAt DateTime @default(now())

  @@map("personal_information")
}

model Modalities {
  id Int @id @default(autoincrement())
  name String
  description String
  valuation Float
  student GymStudent @relation(fields: [studentId], references: [id])
  studentId Int @unique
  createdAt DateTime @default(now())
  updateAt DateTime @default(now())

  @@map("modality")
}